<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hply.persistence.SysOrganizationMapper">

  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="hply.domain.SysOrganization">
    insert into t_sys_organization(ID, OrganizationName, CreateTime, Description) values ( #{ID}, #{OrganizationName}, #{CreateTime}, #{Description} )
  </insert>

  <update id="update" parameterType="map">
    update t_sys_organization set OrganizationName = #{OrganizationName}, CreateTime = #{CreateTime}, Description = #{Description} where id = #{id}
  </update>

  <delete id="delete" parameterType="string">
    delete from t_sys_organization where id = #{id}
  </delete>

  <select id="get" parameterType="string" resultType="hply.domain.SysOrganization">
    select * from t_sys_organization where id = #{id}
  </select>

  <select id="getAll" resultType="hply.domain.SysOrganization">
    select * from t_sys_organization
  </select>

</mapper>


