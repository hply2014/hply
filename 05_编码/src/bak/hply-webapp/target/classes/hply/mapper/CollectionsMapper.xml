<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hply.mapper.CollectionsMapper">

	<cache />

	<select id="getTotalCollectionsAmount" parameterType="string" resultType="Double">
		select sum(ifnull(amount, 0)) from t_collections where
		project_id=#{projectId} and source_of='工程款'
	</select>
</mapper>

