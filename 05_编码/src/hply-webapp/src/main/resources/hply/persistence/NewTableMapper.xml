<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hply.persistence.NewTableMapper">

  <insert id="insert" parameterType="hply.domain.NewTable">
    insert into new_table(id, t1, t2, t3, t4) values ( #{id}, #{t1}, #{t2}, CURRENT_TIMESTAMP, #{t4} )
  </insert>

  <update id="update" parameterType="map">
    update new_table set t1 = #{t1}, t2 = #{t2}, t3 = #{t3}, t4 = #{t4} where id = #{id}
  </update>

  <delete id="delete" parameterType="string">
    delete from new_table where id = #{id}
  </delete>

  <select id="get" parameterType="string" resultType="hply.domain.NewTable">
    select * from new_table where id = #{id}
  </select>

  <select id="getAll" resultType="hply.domain.NewTable">
    select * from new_table
  </select>

</mapper>


