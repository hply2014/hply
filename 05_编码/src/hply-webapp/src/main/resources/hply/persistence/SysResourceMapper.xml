<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hply.persistence.SysResourceMapper">

  <select id="get" parameterType="string" resultType="hply.domain.SysResource">
    select * from t_sys_resource where id = #{id}
  </select>

  <select id="getAll" resultType="hply.domain.SysResource">
    select * from t_sys_resource
  </select>
  
  <select id="getChildren" parameterType="string" resultType="hply.domain.SysResource">
    select * from t_sys_resource where ParentID=#{id}
  </select>

</mapper>


