<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hhwy.fresource2.mapper.partial.PartialSysRoleMapper">

  <insert id="insert" parameterType="SysRole">
    insert into t_sys_role(id, role_code, name, is_default, description) values ( #{id}, #{roleCode}, #{name}, #{isDefault}, #{description} )
  </insert>

  <update id="update" parameterType="map">
    update t_sys_role set role_code = #{roleCode}, name = #{name}, is_default = #{isDefault}, description = #{description}, version = version + 1 where id = #{id}
  </update>

  <delete id="delete" parameterType="string">
    delete from t_sys_role where id = #{id}
  </delete>

  <select id="get" parameterType="string" resultType="SysRole">
    select id as id, role_code as roleCode, name as name, is_default as isDefault, version as version, description as description from t_sys_role where id = #{id}
  </select>
  
  <select id="getVersion" parameterType="string" resultType="int">
    select version from t_sys_role where id = #{id}
  </select>

  <select id="getAll" resultType="SysRole">
    select id as id, role_code as roleCode, name as name, is_default as isDefault, version as version, description as description from t_sys_role
  </select>

</mapper>

