<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hhwy.fresource2.mapper.partial.PartialSysParameterMapper">

  <insert id="insert" parameterType="SysParameter">
    insert into t_sys_parameter(id, param_code, param_name, param_value, default_value, is_inner, create_time, create_user, update_time, update_user, ext_01, ext_02, ext_03, ext_04, description) values ( #{id}, #{paramCode}, #{paramName}, #{paramValue}, #{defaultValue}, #{isInner}, now(), #{createUser}, now(), #{createUser}, #{ext01}, #{ext02}, #{ext03}, #{ext04}, #{description} )
  </insert>

  <update id="update" parameterType="map">
    update t_sys_parameter set param_code = #{paramCode}, param_name = #{paramName}, param_value = #{paramValue}, default_value = #{defaultValue}, is_inner = #{isInner},  update_time = now(), update_user = #{updateUser}, ext_01 = #{ext01}, ext_02 = #{ext02}, ext_03 = #{ext03}, ext_04 = #{ext04}, description = #{description}, version = version + 1 where id = #{id}
  </update>

  <delete id="delete" parameterType="string">
    delete from t_sys_parameter where id = #{id}
  </delete>

  <select id="get" parameterType="string" resultType="SysParameter">
    select id as id, param_code as paramCode, param_name as paramName, param_value as paramValue, default_value as defaultValue, is_inner as isInner, create_time as createTime, create_user as createUser, update_time as updateTime, update_user as updateUser, ext_01 as ext01, ext_02 as ext02, ext_03 as ext03, ext_04 as ext04, version as version, description as description from t_sys_parameter where id = #{id}
  </select>
  
  <select id="getVersion" parameterType="string" resultType="int">
    select version from t_sys_parameter where id = #{id}
  </select>

  <select id="getAll" resultType="SysParameter">
    select id as id, param_code as paramCode, param_name as paramName, param_value as paramValue, default_value as defaultValue, is_inner as isInner, create_time as createTime, create_user as createUser, update_time as updateTime, update_user as updateUser, ext_01 as ext01, ext_02 as ext02, ext_03 as ext03, ext_04 as ext04, version as version, description as description from t_sys_parameter
  </select>

</mapper>

